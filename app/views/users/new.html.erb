<h1>Create a new user</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :phone %>
			<%= f.text_field :phone %>
			
			<%= f.submit "Accountify!", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
