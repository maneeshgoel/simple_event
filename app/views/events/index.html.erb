<h1>Listing all events</h1>
<h2>Events Very Soon:</h2>
<ul>
	<% @events_now.each do |now| %>
		<li><%= link_to now.name, event_path(now) %>, <%= l now.datetime, :format => :long %>, <%= now.location %>, number attending: <%= now.attendees.count %></li>
	<% end %>
</ul>
